<% content_for :heading do %>
Register
<% end %>

<%= form_for @user, url: {action: "create"} do |form| %>



<%= form.label :username %>
<%= form.text_field :username, autocomplete: :off %>

<br />

<%= form.label :email, "Your .edu e-mail" %>
<%= form.text_field :email, autocomplete: :off %>

<br />

<%= form.label :password %>
<%= form.password_field :password %>

<br />

<%= form.label :password_confirmation %>
<%= form.password_field :password_confirmation %>

<br />
<br />

<%= form.submit "Submit", class: "c-btn" %>
<% end %>
