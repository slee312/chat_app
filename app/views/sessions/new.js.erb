$('#dimmed_display').css({width: "350", height: "320"});
loadLoginForm();

function loadLoginForm() {
    $('#dimmed_display').html('<%= escape_javascript(render partial: 'sessions/login', layout: 'layouts/popup') %>');
    $('#dimmer_close').click(function() {
        closePopup();
    });
    $('#login_user').submit(function() {
        if ($('.popup-errors').length) {
            $('.popup-errors').remove();
        }
        $.post(this.action + '.js', $(this).serialize(), null, "script"); 
        return false;
    });
}
